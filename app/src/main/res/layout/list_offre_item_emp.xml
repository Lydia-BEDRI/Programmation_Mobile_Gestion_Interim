<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayoutOffresEmp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/background_grey"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewTitreOffre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:singleLine="true"
        android:text="Agent Logistique (h/f)"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22sp"
        />
    <TextView
        android:id="@+id/textViewNomEntreprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:singleLine="true"
        android:text="U Express"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/textViewLieuOffre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="Saint-Jean-de-Védas"
        android:textColor="@color/black"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/textViewDatePublicationOffreEmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:singleLine="true"
        android:text="Candidature envoyée le 29/03/2024"
        android:textSize="15sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonVoir"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Voir"
        android:textStyle="bold"
        android:background="@drawable/button_background_blue"
        android:textColor="@color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="24dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonModifier"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Modifier"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:textStyle="bold"
            android:background="@drawable/button_background_yellow"
            android:textColor="@color/white"
            android:layout_marginBottom="32dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSuppr"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Supprimer"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/button_background_red"
            android:textColor="@color/white"
            android:layout_marginBottom="32dp"/>


    </LinearLayout>

</LinearLayout>