<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="16dp"
    android:padding="16dp"
    android:paddingBottom="32dp"
    android:background="@drawable/background_grey"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Name"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/carte_de_visite"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/nomPrenom"            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="false"
            android:text="Lydia BEDRI"
            android:textColor="@color/black"
            android:textSize="18sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/DDN"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/date_danniversaire"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/dateNaissance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="false"
            android:text="Aucune date de naissance"
            android:hint="Aucune date de naissance"
            android:textColor="@color/black"
            android:textSize="18sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Poste"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/carriere"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/titreOffreCandEnCours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:text="Vendeur(euse)polyvalent(e)"
            android:textColor="@color/black"
            android:textSize="18sp"
            />

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonContactCandidat"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Contacter le candidat"
        android:textStyle="bold"
        android:background="@drawable/button_background_blue"
        android:textColor="@color/white"
        />

</LinearLayout>