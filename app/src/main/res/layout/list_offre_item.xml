<!-- list_item.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutOffre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="16dp"
    android:padding="16dp"
    android:paddingBottom="32dp"
    android:background="@drawable/background_grey"
    android:orientation="vertical">

<TextView
    android:id="@+id/textViewTitreOffre"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:singleLine="true"
    android:text="Agent Logistique (h/f)"
    android:textColor="@color/black"
    android:textSize="22sp"
    android:textStyle="bold" />

<TextView
    android:id="@+id/textViewDescriptionOffre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:singleLine="false"
    android:maxLines="2"
    android:ellipsize="end"
    android:text="En tant qu'Agent Logistique, vous serez responsable de la gestion  et de la coordination des opérations logistiques au sein de notre entreprise"
    android:textColor="@color/black"
    android:textSize="18sp"
    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_horizontal"
    >
    <TextView
        android:id="@+id/textViewLieuOffre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Paris"
        android:singleLine="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background_yellow"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewRemunerationOffre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="1400€/mois"
        android:singleLine="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"                        android:textColor="@color/white"
        android:background="@drawable/button_background_yellow"
        android:textSize="18sp" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_horizontal"
    android:layout_marginBottom="8dp"
    >
    <TextView
        android:id="@+id/textViewTypeContratOffre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="CDD"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background_yellow"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewPeriodeOffre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="6 mois"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background_yellow"
        android:textSize="18sp" />
</LinearLayout>
</LinearLayout>